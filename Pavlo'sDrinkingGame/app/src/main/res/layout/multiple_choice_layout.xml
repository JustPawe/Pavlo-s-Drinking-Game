<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/multiplechoicelayout"
    tools:context="com.markpaveszka.pavlosdrinkinggame.TurnActivity"
    android:background="@color/yellowScreenColor">

    <ImageView
        android:id="@+id/imageView17"
        android:layout_width="341dp"
        android:layout_height="120dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/pavloentertextbg"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/multipChoiceDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="cursive"
        android:text="Multiple choice"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="34dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView17"
        app:layout_constraintLeft_toLeftOf="@+id/imageView17"
        app:layout_constraintRight_toRightOf="@+id/imageView17" />

    <TextView
        android:id="@+id/questionMCDisplayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView17" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="154dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/pavlobuttonbackground"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView20" />

    <Button
        android:id="@+id/answer1Btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="cursive"
        android:text="A"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView21"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="@+id/imageView21"
        app:layout_constraintRight_toRightOf="@+id/imageView21" />

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="154dp"
        android:layout_height="72dp"
        app:srcCompat="@drawable/pavlobuttonbackground"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView19" />

    <Button
        android:id="@+id/answer2Btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="21dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="cursive"
        android:text="B"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/imageView19"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintLeft_toLeftOf="@+id/imageView18"
        app:layout_constraintRight_toRightOf="@+id/imageView18" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="156dp"
        android:layout_height="64dp"
        app:srcCompat="@drawable/pavlobuttonbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/answer3Btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="cursive"
        android:text="C"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView20"
        app:layout_constraintLeft_toLeftOf="@+id/imageView20"
        app:layout_constraintRight_toRightOf="@+id/imageView20" />

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="156dp"
        android:layout_height="64dp"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/pavlobuttonbackground" />

    <Button
        android:id="@+id/answer4Btn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="cursive"
        android:text="D"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView19"
        app:layout_constraintLeft_toLeftOf="@+id/imageView19"
        app:layout_constraintRight_toRightOf="@+id/imageView19" />

    <TextView
        android:id="@+id/answerDTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="23dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerCTextView" />

    <TextView
        android:id="@+id/answerCTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerBTextView" />

    <TextView
        android:id="@+id/answerBTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/answerATextView" />

    <TextView
        android:id="@+id/answerATextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="27dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionMCDisplayTextView" />


</android.support.constraint.ConstraintLayout>