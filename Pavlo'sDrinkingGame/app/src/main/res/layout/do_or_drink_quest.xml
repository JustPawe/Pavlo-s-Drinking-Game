<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/doordrinklayout"
    tools:context="com.markpaveszka.pavlosdrinkinggame.TurnActivity"
    android:background="@color/yellowScreenColor">


    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="358dp"
        android:layout_height="114dp"
        app:srcCompat="@drawable/pavloentertextbg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="1dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/doOrDrinkDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="cursive"
        android:text="Do it! or drink!"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="34dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView15"
        android:layout_marginBottom="40dp" />

    <TextView
        android:id="@+id/questionDDQDisplayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="113dp"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView15" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="140dp"
        android:layout_height="118dp"
        app:srcCompat="@drawable/pavlobuttonbackground"
        android:layout_marginLeft="28dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="43dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/questionDDQDisplayTextView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="140dp"
        android:layout_height="118dp"
        app:srcCompat="@drawable/pavlobuttonbackground"
        android:layout_marginRight="28dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="43dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/questionDDQDisplayTextView"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/acceptQuestBtn"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:text="Accept quest"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView16"
        app:layout_constraintLeft_toLeftOf="@+id/imageView16"
        app:layout_constraintRight_toRightOf="@+id/imageView16"
        app:layout_constraintTop_toTopOf="@+id/imageView16" />

    <Button
        android:id="@+id/passBtnQuests"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="cursive"
        android:text="Pass"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView23"
        app:layout_constraintLeft_toLeftOf="@+id/imageView23"
        app:layout_constraintRight_toRightOf="@+id/imageView23"
        app:layout_constraintTop_toTopOf="@+id/imageView23" />

</android.support.constraint.ConstraintLayout>